<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="10">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1.54"
        android:weightSum="10"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/mainImage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@mipmap/symbol" />

        <TextView
            android:id="@+id/mainMenu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="8"
            android:text="TextView" />

        <ImageButton
            android:id="@+id/peke"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="#000"
            android:paddingTop="15dp"
            android:paddingRight="15dp"
            android:src="@mipmap/end_t" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="6.06"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:weightSum="3"
            android:layout_weight="1"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/imageB1"
                android:padding="25dp"
                android:background="#000"
                android:scaleType="centerCrop"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:src="@mipmap/jp1"/>
            <ImageButton
                android:id="@+id/imageB2"
                android:padding="25dp"
                android:background="#000"
                android:scaleType="centerCrop"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:src="@mipmap/jp2"/>
            <ImageButton
                android:id="@+id/imageB3"
                android:padding="25dp"
                android:background="#000"
                android:scaleType="centerCrop"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:src="@mipmap/jp3"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:weightSum="3"
            android:layout_weight="1"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/imageB4"
                android:scaleType="centerCrop"
                android:padding="25dp"
                android:background="#000"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:src="@mipmap/jp4"/>
            <ImageButton
                android:id="@+id/imageB5"
                android:scaleType="centerCrop"
                android:padding="25dp"
                android:background="#000"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:src="@mipmap/jp5"/>
            <ImageButton
                android:id="@+id/imageB6"
                android:scaleType="centerCrop"
                android:padding="25dp"
                android:background="#000"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:src="@mipmap/jp6"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:weightSum="3"
            android:layout_weight="1"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/imageB7"
                android:scaleType="centerCrop"
                android:padding="25dp"
                android:background="#000"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:src="@mipmap/jp7"/>
            <ImageButton
                android:id="@+id/imageB8"
                android:scaleType="centerCrop"
                android:padding="25dp"
                android:background="#000"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:src="@mipmap/jp8"/>
            <ImageButton
                android:id="@+id/imageB9"
                android:scaleType="centerCrop"
                android:padding="25dp"
                android:background="#000"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:src="@mipmap/jp9"/>
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:orientation="vertical"
        android:weightSum="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="6"
            android:orientation="horizontal"
            android:layout_weight="0.38">

            <ImageView
                android:id="@+id/subImage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/symbol"
                android:layout_weight="1" />

            <TextView
                android:id="@+id/subMenu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="5"
                android:text="TextView" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="3">

            <TextView
                android:id="@+id/comment"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="TextView" />

            <ImageButton
                android:id="@+id/imageB_dentoh"
                android:layout_width="0dp"
                android:background="#000"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:src="@mipmap/jp10" />

            <ImageButton
                android:id="@+id/imageB_kouzan"
                android:layout_width="0dp"
                android:background="#000"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:src="@mipmap/jp11" />

        </LinearLayout>
    </LinearLayout>


</LinearLayout>
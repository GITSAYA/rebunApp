<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.ape.imai.saya.rebunapp.MainActivity"
    android:orientation="vertical"
    android:weightSum="20"
    android:background="#000">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="12"
        android:layout_weight="1">

        <ImageView
            android:id="@+id/imageSymbol"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="15dp"
            android:paddingRight="0dp"
            android:layout_marginBottom="0dp"
            android:src="@mipmap/symbol" />

        <TextView
            android:id="@+id/textTitle"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="11"
            android:gravity="center"
            android:textStyle="bold"
            android:layout_marginTop="15dp"
            android:layout_marginRight="10dp"
            android:textSize="23dp"
            android:text="TextView" />

    </LinearLayout>

    <TextView
        android:id="@+id/textTitleEn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Hello World!"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:textSize="18dp"
        android:gravity="center"
        android:layout_weight="2"/>

    <ImageView
        android:id="@+id/imageStartMap"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="12"
        android:src="@mipmap/startmap"
        />

    <TextView
        android:id="@+id/textSelectLan"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="TextView"
        android:gravity="center"
        android:textStyle="bold"
        android:textSize="22dp"
        android:layout_weight="1"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@android:color/darker_gray"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_weight="3">

        <Button
            android:id="@+id/buttonJP"
            android:layout_width="0dp"
            android:layout_height="80dp"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:background="#524399"
            android:textSize="34sp"
            android:textStyle="bold"
            android:layout_margin="15dp"
            android:text="Button" />

        <Button
            android:id="@+id/buttonEN"
            android:layout_width="0dp"
            android:layout_height="80dp"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:background="#66b951"
            android:textSize="34sp"
            android:textStyle="bold"
            android:layout_margin="15dp"
            android:text="Button" />
    </LinearLayout>

</LinearLayout>

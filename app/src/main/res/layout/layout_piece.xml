<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000"
    android:weightSum="10">

    <TextView
        android:id="@+id/heading"
        android:layout_weight="2"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:gravity="center"
        android:layout_margin="15dp"
        android:text="TextView" />

    <ImageView
        android:id="@+id/centerImg"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:src="@mipmap/piece1"
        android:layout_weight="5"/>

    <ImageButton
        android:id="@+id/saisei"
        android:background="#000"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:src="@mipmap/sound_play_t"
        android:layout_weight="1.5" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1.5"
        android:weightSum="3"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/volume"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/button"
            android:padding="5dp"
            android:src="@mipmap/volmute" />

        <ImageButton
            android:id="@+id/menuIcon"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:background="@drawable/button"
            android:layout_weight="1"
            android:padding="5dp"
            android:src="@mipmap/menu_jp" />

        <Button
            android:id="@+id/nextArrow"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:drawableLeft="@mipmap/next"
            android:background="@drawable/button"
            android:textColor="#fff"
            android:padding="5dp"
            android:text="次のガイダンスへ" />
    </LinearLayout>
</LinearLayout>